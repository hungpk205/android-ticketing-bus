<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/boder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:text="Tìm kiếm chuyến đi"
            android:textSize="30sp"
            android:textStyle="bold" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:padding="15dp"
                android:id="@+id/edit_text_start_place"
                android:inputType="text"
                android:hint="Nhập điểm đi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:padding="15dp"
                android:id="@+id/edit_text_end_place"
                android:inputType="text"
                android:hint="Nhập điểm đến"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_text_select_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Chọn ngày đi"
                android:padding="15dp"
                android:paddingEnd="0dp"
                android:textSize="20dp">
            </TextView>
            <ImageView
                android:src="@drawable/calendar"
                android:id="@+id/img_select_date"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_width="100px"
                android:layout_height="100px">
            </ImageView>
            <TextView
                android:padding="15dp"
                android:textSize="20dp"
                android:visibility="invisible"
                android:id="@+id/value_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginRight="30dp"
                android:padding="10dp"
                android:id="@+id/button_cancel_search"
                android:text="Hủy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:id="@+id/button_search"
                android:text="Tìm kiếm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>