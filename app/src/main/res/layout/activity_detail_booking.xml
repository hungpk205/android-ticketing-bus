<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailBookingActivity">

    <androidx.appcompat.widget.Toolbar
        android:titleTextColor="#FFFDFD"
        android:background="@color/colorHeader"
        android:id="@+id/toolbar_detail_booking"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:paddingStart="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/text_view_start_end_place_detail"
            android:text="Start Place"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:text="Start time"
            android:id="@+id/text_view_start_end_time_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#555454"
            android:textSize="14sp"
            android:id="@+id/text_view_ticket_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tickets" />
        <TextView
            android:textSize="14dp"
            android:text="Total cost"
            android:id="@+id/text_view_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#555454"
            android:textSize="14sp"
            android:id="@+id/text_view_status_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status" />
        <TextView
            android:textStyle="italic"
            android:textSize="14dp"
            android:text="Created at"
            android:id="@+id/text_view_created_at_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14dp"
            android:text="Company name"
            android:id="@+id/text_view_company_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="Company phone"
                android:id="@+id/text_view_company_phone_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/call_company"
                android:src="@drawable/ic_local_phone"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <TextView
            android:textSize="14dp"
            android:text="Company address"
            android:id="@+id/text_view_company_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Driver major"
                android:id="@+id/text_view_driver_major_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14dp"
                android:text="Number phone"
                android:id="@+id/text_view_driver_major_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:paddingStart="5dp"
                android:id="@+id/icon_call_major"
                android:src="@drawable/ic_local_phone"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Driver major"
                android:id="@+id/text_view_driver_minor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14dp"
                android:text="Number phone"
                android:id="@+id/text_view_driver_minor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:paddingStart="5dp"
                android:id="@+id/icon_call_minor"
                android:src="@drawable/ic_local_phone"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <TextView
            android:text="License plate bus"
            android:id="@+id/text_view_license_plate_bus_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Sơ đồ ghế"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:text="Tầng 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/image_map_bus_floor_1"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:text="Tầng 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/image_map_bus_floor_2"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>